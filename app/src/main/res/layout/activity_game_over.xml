<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".UI_Controllers.GameOverActivity">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/gameover_TXT_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Game Over"
        android:textColor="@color/black"
        android:textSize="72sp"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/gameover_TXT_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:layout_below="@id/gameover_TXT_title"
        android:text="Your score is:" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/gameover_LBL_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gameover_TXT_score"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="casual"
        android:text="000$"
        android:textColor="@color/black"
        android:textSize="48sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/gameover_BTN_records"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/gameover_BTN_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/red_100"
        android:fontFamily="casual"
        android:text="See Highscore Table"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:icon="@drawable/bearry_start"
        app:iconGravity="textEnd"
        app:iconPadding="8dp"
        app:iconSize="30dp"
        app:iconTintMode="multiply"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/gameover_BTN_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/red_100"
        android:fontFamily="casual"
        android:text="Go To Homepage"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:strokeWidth="2dp" />

</RelativeLayout>